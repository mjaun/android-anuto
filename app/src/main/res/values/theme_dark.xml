    <style name="DarkTheme.Game" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">#ffffff</item>

        <item name="backgroundHeader">@drawable/background_header_dk</item>
        <item name="backgroundPopup">@drawable/background_popup_dk</item>
    </style>

    <style name="DarkTheme.Popup" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
