    <style name="OriginalTheme.Game" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">#000000</item>

        <item name="backgroundHeader">@drawable/background_header</item>
        <item name="backgroundPopup">@drawable/background_popup</item>
