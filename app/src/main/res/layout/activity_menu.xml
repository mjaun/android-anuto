<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/shadowColor"
    tools:context=".view.menu.MenuActivity"
    android:id="@+id/activity_menu">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="?attr/backgroundBorder"
        android:padding="10dp"
        android:id="@+id/menu_layout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="?attr/backgroundColor"
            android:src="@mipmap/icon"/>
        
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        
        <Button
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/restart"
            android:id="@+id/btn_restart" />

        <Button
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_map"
            android:id="@+id/btn_change_level" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <Button
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theme"
            android:id="@+id/btn_switch_theme"
            />

        <Button
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sound"
            android:id="@+id/btn_switch_sound"/>

        <Button
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_button"
            android:id="@+id/btn_switch_back_button"/>

    </LinearLayout>

</RelativeLayout>
